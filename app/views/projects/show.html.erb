<% content_for :body_content do %>
  <div>
    <h2 class="text-gray-800 font-black text-3xl mb-3"><%= project.name %></h2>
    <p class="uppercase text-gray-500 text-sm"><%= project.subtitle %></p>
    <% project.description_paragraphs.map do |description| %>
      <div>
        <h3 class="font-black text-2xl text-left text-gray-800 mt-12 mb-2"><%= description.heading%></h3>
        <p><%= description.text%></p>
      </div>
    <% end %>
    <h3 class="font-black text-3xl text-left text-gray-800 mt-12 mb-4">Links</h3>
    <%= link_to(project.link_1) do %>
      <p class="underline md:no-underline hover:underline mb-4"><%= project.link_1_name %></p>
    <% end %>
    <%= link_to(project.link_2) do %>
      <p class="underline md:no-underline hover:underline"><%= project.link_2_name %></p>
    <% end %>
  </div>
<% end %>
