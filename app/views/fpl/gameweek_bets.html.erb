<%= turbo_frame_tag "gameweek_bets" do %>
  <div class="flex justify-between items-center mb-3">
    <h2 class="font-black text-3xl text-gray-800">Gameweek <%= @gameweek.gameweek %></h2>
    <div class="text-right">
      <div class="text-lg font-semibold text-gray-700">
        <%= @gameweek.results.first %>/<%= @gameweek.results.second %> successful
      </div>
      <div class="text-sm text-gray-600">
        Stake: <%= @gameweek.stake %>
      </div>
    </div>
  </div>
  <% if @gameweek.bets.present? %>
    <div class="grid grid-cols-1 gap-8">
      <% @gameweek.bets_ordered_by_position.each do |position, players| %>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-gray-200 pb-2">
            <%= position %>
          </h2>
          <div class="space-y-3">
            <% players.each_with_index do |hash, index| %>
              <% player = FPL::Player.from_db_value(hash) %>
              <div class="p-4 bg-gray-50 rounded-md hover:bg-gray-100 transition-colors">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center">
                    <span class="text-lg font-semibold text-gray-600 mr-3 w-6 text-center">
                      <%= index + 1 %>
                    </span>
                    <span class="text-gray-800 font-medium text-lg">
                      <%= player.name %>
                    </span>
                  </div>
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                    FPL Weighting: <%= player.weight %>
                  </span>
                </div>
                <div class="ml-9">
                  <% player.bets.each do |bet| %>
                    <div class="text-sm text-gray-600 mb-1">
                      â€¢ <%= bet %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-lg p-8 text-center">
      <p class="text-gray-600">Nothing for this gameweek yet</p>
    </div>
  <% end %>
<% end %>
