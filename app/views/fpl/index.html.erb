<% content_for :body_content do %>
  <div class="flex flex-col justify-start text-left" data-controller="fpl">
    <h1 class="font-black text-4xl mb-3 text-left text-gray-800">FPL Bet</h1>

    <div class="mb-6">
      <select id="gameweek-select"
              data-fpl-target="select"
              data-action="change->fpl#selectGameweek"
              class="block w-64 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        <% @gameweeks.each do |number| %>
          <option value="<%= number %>" <%= 'selected' if number == @gameweeks.last %>>
            Gameweek <%= number %>
          </option>
        <% end %>
      </select>
    </div>

    <%= turbo_frame_tag "gameweek_bets", src: fpl_gameweek_path(@gameweeks.last), data: { fpl_target: "frame" } %>
  </div>
<% end %>
