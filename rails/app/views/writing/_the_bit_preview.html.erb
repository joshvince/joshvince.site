<% the_bit = local_assigns[:the_bit] %>
<%= link_to the_bit.path do %>
  <div class="flex flex-col rounded-md shadow-lg hover:shadow-xl transition-all p-6 mb-14 the-bit-color-palette">
    <h2 class="font-bold text-3xl mb-3"><%= the_bit.title  %></h2>
    <p class="text-sm mb-4"><%= format_published_date(the_bit.published_on) %></p>
    <p><%= the_bit.subtitle %></p>
  </div>
<% end %>
