<% content_for :body do %>
  <body class="bg-gray-50 min-h-screen">
    <main>
      <div>
        <div
          class="container mx-auto max-w-5xl md:pt-12 pb-12 flex flex-col md:flex-row font-body bg-gray-50 text-gray-600 font-light text-lg w-100"
          id="info-container"
        >
          <%= render "shared/sidebar" %>
          <%= render "shared/mobile_menu" %>
          <div class="px-6 md:px-12 mt-28 md:mt-2 md:w-9/12 md:ml-64">
            <%= content_for?(:content) ? yield(:content) : yield %>
          </div>
        </div>
      </div>
    </main>
  </body>
<% end %>

<%= render template: "layouts/application" %>
